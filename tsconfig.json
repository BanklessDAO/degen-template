{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es2020"],
        "sourceMap": true,
        "outDir": "./dist/",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
